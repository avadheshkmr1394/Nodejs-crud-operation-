<h3><a href="/employee" class="btn btn-secondary"><i class="fa fa-plus"></i> Create New</a> Employee List</h3>
<table class="table table-striped  table-responsive">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>e-Mail</th>
            <th>Mobile</th>
            <th>City</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.fullName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.mobile}}</td>
            <td>{{this.city}}</td>
            <td><a href="/employee/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>&nbsp;&nbsp;
                <a href="/employee/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this records')" ><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a></td>             
        </tr>
        {{/each}}
    </tbody>
</table>